<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery='.pos-sale-ticket' t-operation='replace'>
        <!-- <t t-jquery='br:nth-of-type(4)' t-operation='replace'> -->

            <div class="pos-sale-ticket">
            <t t-if="receipt.header">
                <div style='text-align:center'>
                    <t t-esc="receipt.header" />
                </div>
            </t>
        <div style="width:100%;text-align:center;">
            <div style='text-align:center'>
                    <img src='/web/binary/company_logo' style="width:35%;text-align:center;"/>     <hr></hr>             
            <t t-if="widget.pos.company.name">
                <div style="width:100%;text-align:center;">
                    <strong> 
                        <t t-esc="widget.pos.company.name"/>
                        <t t-esc="widget.pos.pos_reference"/>
                    </strong> 
                </div>
            </t>
                <t>
                <div > 
                    <span style="width:100%;text-align:center;" >RTN : </span><t t-esc="widget.pos.company.vat"/><br />
                </div>
                </t>
                <t t-if="widget.pos.company.email">
                    <div style="width:100%;text-align:center;"><t t-esc="widget.pos.company.email"/>
                    
                    </div>
                </t>
                <t t-if="widget.pos.company.phone">
                    <div style="width:100%;text-align:center;"><t t-esc="widget.pos.company.phone"/></div>
                </t>
                <t>
                    <div style="width:100%;text-align:center;">
                        <t t-esc='receipt.company.vat_label' />  
                    </div>
                </t>
                <t>
                    <div style="width:100%;text-align:center;">
                        <t t-esc="widget.pos.company.website"/>
                    </div>
                </t>
            </div>
        </div>
<hr></hr>
                <div style="width: 100%; float: left; padding: 0px 0px;">
                               <strong>Factura : <t t-esc="order.get_subtotal_in_words()"/></strong><br/>    
                        <t t-if="order.get_client()">
                            Cliente: 
                            <t t-esc="order.get_client().name"/>
                            <br />
                            RTN:<t t-esc="order.changed.client.vat"/><br/>
                        </t> 

                    Cajero: 
                    <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
                       Fecha :  <t t-esc="moment().format('L LT')"/>
                    </div>
                <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='30%' />
                        <col width='30%' />
                        <col width='20%' />
                        <col width='20%' />
                    </colgroup>
                    <tr style="border: 0.5px solid rgb(0, 0, 0);">
                        <th style='text-align:left' >Name</th>
                        <th style='text-align:left' >Qty</th>
                        <th style='text-align:center'>Price</th>
                        <th style='text-align:right' >Total</th>
                    </tr>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <td>
                            <t style='text-align:left' t-esc="orderline.get_product().display_name"/>
                             <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a <t t-esc="orderline.get_discount()"/>% discount
                                </div>
                            </t>
                        </td>
                        <td style='text-align:left'>
                            <t t-esc="orderline.get_quantity() + ' ' + orderline.get_unit().name"/>
                        </td>
                        <td style='text-align:center'>
                        	<t t-esc="orderline.get_display_price()"/>
                        </td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-total'>
                    <colgroup>
                        <col width='40%' />
                        <col width='30%' />
                        <col width='30%' />
                    </colgroup>
                    <tr>
                        <td></td>
                        <td>Subtotal:</td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                        </td>
                    </tr>
                    <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                        <tr>
                            <td></td>
                            <td><t t-esc="taxdetail.name" /></td>
                            <td style='text-align:right'>
                                <t t-esc="widget.format_currency(taxdetail.amount)"/>
                            </td>
                        </tr>
                    </t>
                    <tr>
                        <td></td>
                        <td>Discount:</td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_discount())"/>
                        </td>
                    </tr>
                    <tr class="emph">
                        <td>Total:</td>
                        <td colspan="2" style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                        </td>
                    </tr>
                </table>
                <br/>
                <table class='receipt-paymentlines'>
                    <colgroup>
                        <col width='38%' />
                        <col width='20%' />
                        <col width='13%' />
                        <col width='29%' />
                    </colgroup>
                    <t t-foreach="paymentlines" t-as="line">
                      <tr>
                          <td>
                              <t t-esc="line.name"/>
                          </td>
                          <td>
                          </td>
                          <td>
                          </td>
                          <td style='text-align:right'>
                              <t t-esc="widget.format_currency(line.get_amount())"/>
                          </td>
                      </tr>
                    </t>
                </table>
                <br/>
                <table class='receipt-change'>
                    <colgroup>
                        <col width='40%' />
                        <col width='15%' />
                        <col width='15%' />
                        <col width='30%' />
                    </colgroup>
                    <tr><td>Change:</td>
                         <td>
                          </td>
                          <td>
                          </td>
                        <td style='text-align:right'>
                        <t t-esc="widget.format_currency(order.get_change())"/>
                        </td></tr>
                </table>
                <br></br>
                <span>SON :  <t t-esc="order.get_letras()"/></span> 
                 
            <t>
                <br/>
                <div style='text-align:center' >
                    <br/>
                    <hr></hr>
                    <t t-esc="receipt.footer" />
                    <span>CAI : <br/> <t t-esc="order.get_cai()"/>  </span><br/>
                    <span>Rango Autorizado :<br/>  <t t-esc="order.get_min_value()"/> <br/>hasta<br/>  <t t-esc="order.get_max_value()"/> </span><br/>
                    <span>Fecha Expiraci√≥n :<br/>  <t t-esc="order.get_expiration_date()"/></span><br/>
                </div>
            </t>


            </div>
        </t>
    </t>
</templates>


